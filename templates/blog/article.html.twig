{% extends 'base.html.twig' %}

{% block title %}{{ article.title }} - Mon Blog{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="display-4">{{ article.title }}</h1>
                <p class="text-muted">{{ article.date|date('Y-m-d H:i') }}</p>
                <p>{{ article.description }}</p>
            </div>
        </div>
    </div>
{% endblock %}

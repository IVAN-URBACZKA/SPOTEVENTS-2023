{% extends 'base.html.twig' %}

{% block title %}Admin - Events{% endblock %}

{% block body %}
    <h1>Admin - Events</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.title }}</td>
                    <td>{{ event.date|date('Y-m-d') }}</td>
                    <td>
                        <a href="{{ path('admin_event_delete', {'id': event.id}) }}"
                           onclick="return confirm('Are you sure you want to delete this event?')"
                        >
                            Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Admin - Articles{% endblock %}

{% block body %}
    <h1>Admin - Articles</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>{{ article.date|date('Y-m-d') }}</td>
                    <td>
                        <a href="{{ path('admin_article_delete', {'id': article.id}) }}"
                           onclick="return confirm('Are you sure you want to delete this article?')"
                        >
                            Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{# templates/events/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel événement{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h1 class="text-center">Créer un nouvel événement</h1>

                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.title, 'Titre de l\'événement') }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    {# Afficher les erreurs du champ title #}
                    {{ form_errors(form.title) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.date, 'Date de l\'événement') }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                    {# Afficher les erreurs du champ date #}
                    {{ form_errors(form.date) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, 'Description de l\'événement') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    {# Afficher les erreurs du champ description #}
                    {{ form_errors(form.description) }}
                </div>

                <div class="mb-3">
                    {# Utiliser form_row pour afficher le bouton de soumission #}
                    {{ form_row(form._token) }} {# Ajoutez le jeton CSRF ici, si nécessaire #}
                    <button type="submit" class="btn btn-primary">Créer l'événement</button>
                </div>

                {{ form_end(form) }}

               

            </div>
        </div>
    </div>
{% endblock %}
